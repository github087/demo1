pipeline:
  agent: any

  triggers:
    - githubPush:
        branches:
          - develop

  stages:
    - stage: Test
      steps:
        - script:
            - git 'checkout develop'  # Checkout the develop branch
            - echo "Running tests..."  # Placeholder for your actual test commands
            - echo "Tests passed!"    # Placeholder for the success message

    - stage: Deploy to Prod
      condition:
        status: succeeded('Test')
      steps:
        - script:
            - echo "Production "  # Placeholder for your actual test commands
